}

<script>

    function deleteContactConfirm(contactID) {
        Swal.fire({
            title: 'Bu mesajı silmek istediğinize emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Hayır, iptal et!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Admin/Contact/RemoveContact/" + contactID,
                    type: 'DELETE',
                    success: function () {
                        Swal.fire('Silindi!', 'Mesaj başarıyla silindi.', 'success').then(() => {
                            window.location.href = "/Admin/Contact/Index";
                        });
                    },
                    error: function (err) {
                        Swal.fire('Hata!', 'Silme işlemi başarısız oldu.', 'error');
                    }
                });
            }
        });
    }

   
</script>



   



