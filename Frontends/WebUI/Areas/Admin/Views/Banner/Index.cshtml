@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Banner Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfanın banner alanında bulunan bilgileri aşağıdan düzenleyebilirsiniz. Tema bütünlüğünün bozulmaması adına lütfen sadece 1 tane veri girişi yapınız. Aksi durumlarda tema bütünlüğün bozulacaktır.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Resim URL</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.Description</td>
                                            <td>@item.ImageUrl</td>
                                     
                                            <td>
                                                <button onclick="deleteBannerConfirm('@item.BannerID')" class="btn btn-outline-danger">Sil</button>
                                            </td>
                                            <td><a href="/Admin/Banner/UpdateBanner/@item.BannerID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/Admin/Banner/CreateBanner" class="btn btn-outline-primary">Yeni Banner Girişi</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->

        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>

<script>
    function deleteBannerConfirm(bannerID) {
        Swal.fire({
            title: 'Bu Bilgiyi silmek istediğinize emin misiniz?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'Hayır, iptal et!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Admin/Banner/RemoveBanner/" + bannerID,
                    type: 'DELETE',
                    success: function () {
                        Swal.fire('Silindi!', 'Bilgi başarıyla silindi.', 'success').then(() => {
                            window.location.href = "/Admin/Banner/Index";
                        });
                    },
                    error: function (err) {
                        Swal.fire('Hata!', 'Silme işlemi başarısız oldu.', 'error');
                    }
                });
            }
        });
    }</script>
