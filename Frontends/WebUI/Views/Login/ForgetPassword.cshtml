@{
    Layout = null;
    ViewData["Title"] = "Şifremi Unuttum";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/carbook-master/css/email-styles.css">
</head>
<body>
    <center style="width: 100%; background-color: #f1f1f1;">
        <div class="email-container">
            <table align="center" role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
                <tr>
                    <td valign="top" class="bg_white" style="padding: 1em 2.5em 0 2.5em;">
                        <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr>
                                <td class="logo" style="text-align: center;">
                                    <h1><a href="#"></a></h1>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td valign="middle" class="hero bg_white" style="padding: 3em 0 2em 0;">
                        <img src="/carbook-master/images/email.png" alt="" class="hero-image">
                    </td>
                </tr>
                <tr>
                    <td valign="middle" class="hero bg_white" style="padding: 2em 0 4em 0;">
                        <table>
                            <tr>
                                <td>
                                    <div class="text">
                                        <h2>Şifremi Unuttum</h2>
                                        <h3>E-posta adresinize gönderilen bağlantıyı kullanarak şifrenizi sıfırlayabilirsiniz.</h3>
                                        @if (TempData["ForgetPasswordError"] != null)
                                        {
                                            <div class="alert alert-danger" role="alert">
                                                @TempData["ForgetPasswordError"]
                                            </div>
                                        }
                                        @if (TempData["ForgetPasswordSuccess"] != null)
                                        {
                                            <div class="alert alert-success" role="alert">
                                                @TempData["ForgetPasswordSuccess"]
                                            </div>
                                        }
                                        <form asp-controller="Login" asp-action="ForgetPassword" method="post">
                                            <div class="form-group">
                                                <label for="email">E-posta Adresi:</label>
                                                <input type="email" id="email" name="email" class="form-control" required />
                                            </div>
                                            <button type="submit" class="btn btn-primary">Şifre Sıfırlama Bağlantısı Gönder</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </center>
</body>
</html>
