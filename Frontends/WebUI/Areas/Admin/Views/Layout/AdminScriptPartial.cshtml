<!-- Toastify scripts -->
@if (TempData["LoginSuccess"] != null)
{
    <script>
        var message = decodeURIComponent("@Html.Raw(Uri.EscapeDataString(TempData["LoginSuccess"].ToString()))");
        Toastify({
            text: message,
            duration: 3000,
            gravity: "top",
            position: "right",
            backgroundColor: "#28a745",
            stopOnFocus: true,
        }).showToast();
    </script>
}

@if (TempData["LoginFailed"] != null)
